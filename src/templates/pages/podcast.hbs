---
title: <%= podcast.title %>
navBarTitle: <%= podcast.title %>

navBarMenuButton: false
navBarArrowButton: true
navBarSearch: true

menuOpen: false
playerOpen: false

options:
- subscribe
- unsubscribe

newEpisodeOptions:
- mark played

playedEpisodeOptions:
- mark new

miniPlayer: false
maxiPlayer: false
---
<div class="flex-row">
  <div class="flex-col sm12 md8 lg5">
    {{> podcast-details podcast=podcast}}
  </div>
  <div class="flex-col sm12 md8 lg5">
    {{> episode-list
    title="New Episodes"
    dimmed=false
    episodes=podcast.new-episodes
    episodeOptions=newEpisodeOptions
    }}
  </div>
  <div class="flex-col sm12 md8 lg5">
    {{> episode-list
    title="Played Episodes"
    dimmed=true
    episodes=podcast.played-episodes
    episodeOptions=playedEpisodeOptions
    }}
  </div>
</div>
