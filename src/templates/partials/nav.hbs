<div class='nav navbar-nav'>
  <div class="nav-item">
    {{#if navBarMenuButton}}
      <a href="#" id="toggle-menu">
        <i class="material-icons">menu</i>
      </a>
    {{/if}}
    {{#if navBarArrowButton}}
      <a href="#" id="toggle-menu">
        <i class="material-icons">arrow_back</i>
      </a>
    {{/if}}
  </div>
  {{#if searchOpen}}
    <input class="nav-search" type="text" id="search-field" placeholder="Search podcasts">
    <div class="nav-item float-xs-right">
      <a href="#" id="search-close">
        <i class="material-icons">close</i>
      </a>
    </div>
  {{else}}
    <h1 class="navbar-brand">{{navBarTitle}}</h1>
    <div class="nav-item float-xs-right">
      <a href="#" id="search">
        <i class="material-icons">search</i>
      </a>
    </div>
  {{/if}}
</div>
