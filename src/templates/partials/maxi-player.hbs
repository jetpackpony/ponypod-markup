<div class="maxi-player">
  <header>
    <div class="title">
      <h2>{{episode.title}}</h2>
      <div class="secondary">
        <div class="date">{{episode.date}}</div>
        <div class="duration">{{episode.duration}}</div>
      </div>
    </div>
    <div class="collapse-button">
      <a href="#!">
        <i class="material-icons">expand_more</i>
      </a>
    </div>
  </header>
  <div class="description">
    <p>{{episode.summary}}</p>
    <div class="actions">
      <a href="/episode.html" class="waves-effect btn-flat">Read More</a>
    </div>
  </div>
  <div class="playback-progress">
    <div class="time">
      <span>23:40</span>
      <span>-31:54</span>
    </div>
    <div class="progress-container">
      <div class="thumb">
        <div class="time-tooltip">23:14</div>
      </div>
      <div class="progress-wrapper">
        <div class="progress">
          <div class="determinate"></div>
        </div>
      </div>
    </div>


  </div>
  <div class="controls">
  </div>
</div>
