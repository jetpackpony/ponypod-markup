<div class="maxi-player">
  <header>
    <div class="title">
      <h2>{{episode.title}}</h2>
      <div class="secondary">
        <div class="date">{{episode.date}}</div>
        <div class="duration">{{episode.duration}}</div>
      </div>
    </div>
    <div class="collapse-button">
      <a href="#!">
        <i class="material-icons">expand_more</i>
      </a>
    </div>
  </header>
  <div class="description">
    <p>{{episode.summary}}</p>
    <div class="actions">
      <a href="/episode.html" class="waves-effect btn-flat">Read More</a>
    </div>
  </div>
  <div class="progress">
  </div>
  <div class="controls">
  </div>
</div>
